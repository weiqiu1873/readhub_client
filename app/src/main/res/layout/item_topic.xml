<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/topic_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/tv_topic_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_topic_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/font_16"/>
                <ImageButton
                    android:id="@+id/tv_topic_delete"
                    android:src="@mipmap/ic_delete"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_topic_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_topic_header"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="3"
                android:textColor="@color/b2"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_news_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_topic_summary"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/ic_point"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/b1"
                android:textSize="@dimen/font_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_news_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_news_one"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/ic_point"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/b1"
                android:textSize="@dimen/font_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_news_two"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/b5"/>

            <TextView
                android:id="@+id/tv_topic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_divider"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/b3"
                android:textSize="@dimen/font_12"/>
            <LinearLayout
                android:id="@+id/tv_topic_linear"
                android:layout_below="@+id/tv_divider"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/tv_topic_collect"
                    android:src="@mipmap/collect"
                    android:background="@color/colorWhite"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/tv_topic_share"
                    android:src="@mipmap/share"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>